<Page x:Class="Sims2023.WPF.Views.Guest2Views.Guest2TourRequestListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sims2023.WPF.Views.Guest2Views"
        mc:Ignorable="d"
        Title="Guest2TourRequestListView"  d:DesignHeight="620" d:DesignWidth="1024">
    <Grid>
        <DataGrid x:Name="dataGridGuestTourRequests" ItemsSource="{Binding TourRequests}"
                     SelectionMode="Single"
                    IsReadOnly="True" AutoGenerateColumns="False" Width="878" Height="400" Margin="44,110,80,110">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Grad" Width="124" Binding="{Binding Location.City}"/>
                <DataGridTextColumn Header="Drzava" Width="110" Binding="{Binding Location.Country}"/>
                <DataGridTextColumn Header="Jezik" Width="82" Binding="{Binding Language}" />
                <DataGridTextColumn Header="Broj gostiju" Width="90" Binding="{Binding GuestNumber}"/>
                <DataGridTextColumn Header="Pocetak" Width="125" Binding="{Binding Start}"/>
                <DataGridTextColumn Header="Kraj" Width="125" Binding="{Binding End}"/>
                <DataGridTextColumn Header="Status" Width="82" Binding="{Binding State}"/>
                <DataGridTextColumn Header="Opis" Width="140" Binding="{Binding Description}"/>
                
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="New request" FontSize="15" Width="147" Height="42" HorizontalAlignment="Left" Margin="580,518,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Statistics" FontSize="15" Width="147" Height="42" HorizontalAlignment="Left" Margin="780,518,0,0" VerticalAlignment="Top"/>
        <Label Content="My tour requests" FontSize="40" HorizontalAlignment="Left" Margin="44,23,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
