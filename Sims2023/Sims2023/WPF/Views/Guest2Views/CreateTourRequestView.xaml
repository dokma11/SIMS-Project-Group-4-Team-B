<Window x:Class="Sims2023.WPF.Views.Guest2Views.CreateTourRequestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Sims2023.WPF.Views.Guest2Views"
        mc:Ignorable="d"
        Title="CreateTourRequestView" Height="463" Width="785"  WindowStartupLocation="CenterScreen">
    <Window.Icon>
        <ImageSource>pack://application:,,,/Sims2023;component/Resources/GuestTwoResources/HorizontBW-02.ico</ImageSource>
    </Window.Icon>
    <Window.Resources>
        <ImageBrush x:Key="BackgroundBrush" ImageSource="pack://application:,,,/Sims2023;component/Resources/GuestTwoResources/backgroundtexture.jpg" Stretch="UniformToFill" />
    </Window.Resources>
    <Grid Background="{StaticResource BackgroundBrush}">
        <Label Content="New tour request"  FontSize="28" HorizontalAlignment="Left" Margin="25,22,0,0" VerticalAlignment="Top"/>
        <Label Content="Country:"  FontSize="20" HorizontalAlignment="Left" Margin="25,82,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="countryComboBox" HorizontalAlignment="Left" Height="27" Width="140" Margin="114,87,0,0" VerticalAlignment="Top" SelectionChanged="CountryComboBox_SelectionChanged"/>
        <Label Content="City:"  FontSize="20" HorizontalAlignment="Left" Margin="270,82,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cityComboBox" HorizontalAlignment="Left" Height="27" Width="140" Margin="334,87,0,0" VerticalAlignment="Top"/>
        <Label Content="Language:"  FontSize="20" HorizontalAlignment="Left" Margin="494,82,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="languageComboBox" HorizontalAlignment="Left" Height="27" Width="140" Margin="600,87,0,0" VerticalAlignment="Top">
            <ComboBoxItem>English</ComboBoxItem>
            <ComboBoxItem>Serbian</ComboBoxItem>
            <ComboBoxItem>German</ComboBoxItem>
            <ComboBoxItem>French</ComboBoxItem>
            <ComboBoxItem>Spanish</ComboBoxItem>
            <ComboBoxItem>Italian</ComboBoxItem>
            <ComboBoxItem>Chinese</ComboBoxItem>
            <ComboBoxItem>Japanese</ComboBoxItem>
        </ComboBox>
        <Label Content="Number of guests:"  FontSize="20" HorizontalAlignment="Left" Margin="25,138,0,0" VerticalAlignment="Top"/>
        <xctk:IntegerUpDown Name="guestNumberBox" AllowTextInput="False" HorizontalAlignment="Left" Margin="203,144,0,0" VerticalAlignment="Top" Minimum="1" Value="1" Width="52" Height="24"/>
        <Label Content="Description:"  FontSize="20" HorizontalAlignment="Left" Margin="25,187,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="descriptionTextBox" HorizontalAlignment="Center" Margin="0,229,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="710" Height="140"/>
        <DatePicker  x:Name="startDatePicker"  Width="130" HorizontalAlignment="Left" Margin="370,144,0,0" VerticalAlignment="Top" SelectedDateChanged="StartDatePicker_SelectedDateChanged"></DatePicker>
        <Label Content="Start date:"  FontSize="20" HorizontalAlignment="Left" Margin="270,138,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="endDatePicker" DisplayDateStart="{Binding ElementName=StartDatePicker, Path=SelectedDate}" Width="130" HorizontalAlignment="Left" Margin="609,144,0,0" VerticalAlignment="Top"/>
        <Label Content="End date:"  FontSize="20" HorizontalAlignment="Left" Margin="512,138,0,0" VerticalAlignment="Top"/>
        <Button Content="Cancel" Background="#bcbcbc" FontSize="17" Width="148" Height="42" HorizontalAlignment="Left" Margin="591,381,0,0" VerticalAlignment="Top" Click="CancelButton_Click"/>
        <Button Content="Create" Background="#bcbcbc" FontSize="17" Width="147" Height="42" HorizontalAlignment="Left" Margin="400,381,0,0" VerticalAlignment="Top" Click="CreateButton_Click"/>


    </Grid>
</Window>
