        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Sims2023.WPF.Views.Guest2Views"
        mc:Ignorable="d"
        Title="RateTourView" Height="463" Width="700">
    <Grid>
        <Label Content="Guide's Knowledge:" FontSize="20" HorizontalAlignment="Left" Margin="36,79,0,0" VerticalAlignment="Top"/>
        <Label Content="Interest of tour:" FontSize="20" HorizontalAlignment="Left" Margin="371,80,0,0" VerticalAlignment="Top"/>
        <Label Content="Guide's language capabilility:" FontSize="20" HorizontalAlignment="Left" Margin="36,140,0,0" VerticalAlignment="Top"/>
        <Label Content="Add pictures:" FontSize="20" HorizontalAlignment="Left" Margin="371,142,0,0" VerticalAlignment="Top"/>
