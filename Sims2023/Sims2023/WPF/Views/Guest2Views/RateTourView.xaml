        <Button Content="Submit" Width="147" Height="42" HorizontalAlignment="Left" Margin="517,395,0,0" VerticalAlignment="Top" Click="Send_Click"/>
        <ListBox x:Name="picturesOutput" Margin="498,204,22,204"/>
        <TextBox x:Name="pictureInputTextBox" HorizontalAlignment="Left" Margin="498,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="25"/>
        <Button  Content="Add picture" HorizontalAlignment="Left" Height="19" Margin="498,179,0,0" VerticalAlignment="Top" Width="180" Click="AddPicture_Click"/>


    </Grid>
</Window>
