<Window x:Class="Sims2023.WPF.Views.GuidesViews.LiveTourTrackingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LiveTourTrackingView" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <DockPanel>
            <ToolBar Height="43">
                <Button x:Name="markKeyPointButton" Click="MarkKeyPointButton_Click" >Oznaci trenutnu tacku</Button>
                <Button x:Name="markGuestsPresentButton" Click="MarkGuestsPresentButton_Click">Oznaci prisutne goste</Button>            
            </ToolBar>
        </DockPanel>
        <DataGrid ItemsSource="{Binding KeyPointsToDisplay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding Path=SelectedKeyPoint, UpdateSourceTrigger=PropertyChanged}" Height="240" IsReadOnly="True"/>
        <Button x:Name="cancelTourButton" Click="CancelTourButton_Click" Content="Prekini turu" Height="50" Width="100" Margin="0, 70, 0, 0"/>
    </StackPanel>
</Window>
