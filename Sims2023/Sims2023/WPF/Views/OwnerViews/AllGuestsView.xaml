<Window x:Class="Sims2023.View.AllGuestsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sims2023.View"
        mc:Ignorable="d"
        Title="AllGuestsView" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="myDataGrid"
                  ItemsSource="{Binding Path=Reservatons, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding Path=SelectedGuest, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False" IsReadOnly="True" Margin="121,45,354,90"
                  Grid.Row="0" Grid.Column="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ime" Binding="{Binding Guest.Name}" Width="70"></DataGridTextColumn>
                <DataGridTextColumn Header="Prezime" Binding="{Binding Guest.Surname}" Width="80"></DataGridTextColumn>
                <DataGridTextColumn Header="Boravak" Binding="{Binding Accommodation.Name}" Width="*"></DataGridTextColumn>


            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="button" Content="Ocijeni" Click="Grade_Click" HorizontalAlignment="Left" Margin="569,224,0,0" VerticalAlignment="Top" Width="146" Height="44"/>

    </Grid>
</Window>
