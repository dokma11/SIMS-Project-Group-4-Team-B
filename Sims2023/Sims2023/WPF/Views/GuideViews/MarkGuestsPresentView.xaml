<Window x:Class="Sims2023.WPF.Views.GuideViews.MarkGuestsPresentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
    Title="MarkGuestsPresentView" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="guestDataGrid" ItemsSource="{Binding GuestsToDisplay}" SelectionMode="Extended" Width="326" Height="247" Margin="37,10,37,77" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ime" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Prezime" Binding="{Binding Surname}"/>
                <DataGridTextColumn Header="Korisnicko ime" Binding="{Binding Username}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="cancelButton" Click="CancelButton_Click" Content="Cancel" Margin="255,274,85,20"/>
        <Button x:Name="submitButton" Click="SubmitButton_Click" Content="Submit" Margin="81,269,259,25"/>
    </Grid>
</Window>
