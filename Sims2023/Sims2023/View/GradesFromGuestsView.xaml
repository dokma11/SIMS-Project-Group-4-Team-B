<Window x:Class="Sims2023.View.GradesFromGuestsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sims2023.View"
        mc:Ignorable="d"
        Title="GradesFromGuestsView" Height="450" Width="800">
    <Grid Margin="150,112,374,67">

        <ListView ItemsSource="{Binding people}" SelectedItem="{Binding SelectedPerson}" Margin="-10,0,10,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ime" Width="100" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Prezime"  Width="120" DisplayMemberBinding="{Binding Surrname}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="label" Content="Gosti koji su vas ocijenili" HorizontalContentAlignment="Center" FontSize="20" HorizontalAlignment="Left" Margin="-64,-58,0,0" VerticalAlignment="Top" Width="358"/>
        <StackPanel Margin="346,-40,-346,-30">
            <Button x:Name="button" Content="Detalji" Margin="0,50,50,0" Height="47" Click="Details_Click" />
            <Button x:Name="button1" Content="Nazad" Height="52" Margin="0,50,50,0" Click="Back_Click" />
        </StackPanel>



    </Grid>
</Window>
