<Window x:Class="Sims2023.View.GuideView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sims2023.View" xmlns:model="clr-namespace:Sims2023.Model" d:DataContext="{d:DesignInstance Type=model:Tour}"
        mc:Ignorable="d"
        Title="GuideView" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <DockPanel>
            <ToolBar Height="30">
                <Button x:Name="createButton" Click="CreateButton_Click">Kreiraj turu</Button>
                <Button x:Name="startTourButton" Click="StartTourButton_Click">Zapocni turu</Button>
                <Button x:Name="reviewsButton" Click="ReviewsButton_Click">Vidi recenzije</Button>
            </ToolBar>
        </DockPanel>
        <DataGrid x:Name="toursDataGrid" Height="300" ItemsSource="{Binding ToursToDisplay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding Path=SelectedTour, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True">
        </DataGrid>
    </StackPanel>
</Window>
