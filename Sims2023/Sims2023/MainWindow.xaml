<Window x:Class="Sims2023.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sims2023"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label FontSize="40" HorizontalAlignment="Center" Margin="0,50,0,0">Dobrodošli u Horizont!</Label>
        <Label FontSize="24" HorizontalAlignment="Center">Prijavite se kako biste nastavili dalje</Label>
        <Label HorizontalAlignment="Center" Margin="0,20,160,0">Korisničko ime: </Label>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Center" Width="240" Height="27"></TextBox>
        <Label HorizontalAlignment="Center" Margin="0,0,195,0">Lozinka: </Label>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" Width="240" Height="27"></PasswordBox>
        <Button x:Name="LoginButton" Click="LoginButton_Click" Content="Prijavi se" Margin="0,20,0,0" Width="200" Height="40"/>
    </StackPanel>
</Window>
